<Window x:Class="MolkZip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MolkZip"
        mc:Ignorable="d"
        Title="Molk" Height="450" Width="800">
    <Grid Background="#19352154">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Menyraden-->
        <StackPanel  Grid.Column="3" VerticalAlignment="Center">
        <Grid Grid.Row="0" Background="#FF352154">
            <Menu VerticalAlignment="Center" Background="Transparent" Padding="0,10">
                <MenuItem Header="Help" Foreground="#FFF"/>
                    <MenuItem Header="?????"  Foreground="#FFF" Click="MenuItem_Click"/>
            </Menu>
            <Image Source="/logo-vit.png" HorizontalAlignment="Right" Height="15" Margin="15,10"/>
        </Grid>
        </StackPanel>

        <!--Mittenraden-->
        <Grid x:Name="Middlebar" Grid.Row="1" Margin="10, 20, 10, 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Upload your files" Padding="0,0,0,10" FontWeight="Bold"/>
                <Border Grid.Row="1" BorderBrush="#FF352154" BorderThickness="2" Background="#FFF" CornerRadius="5">
                    <StackPanel Grid.Row="1" Grid.Column="0" x:Name="Files" AllowDrop="True" VerticalAlignment="Center">
                        <Image Source="Images/upload.png" Height="64" VerticalAlignment="Center"/>
                        <TextBlock Text="Drag and drop file or browse" HorizontalAlignment="Center"/>
                        <!--<ListBox x:Name="FilesList" Drop="Files_Drop" AllowDrop="True" HorizontalAlignment="Center" Visibility="Hidden"/>-->
                    </StackPanel>
                </Border>
            </Grid>


            <StackPanel x:Name="Buttons" Grid.Column="1" VerticalAlignment="Center" Margin="5">
                <Button HorizontalContentAlignment="Stretch" Click="Molk" Margin="10">
                    <Grid>
                        <TextBlock Grid.Column="0" Text="Molk" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"/>
                        <Image Grid.Column="1" Source="images/upload.png" Height="34" HorizontalAlignment="Right" Margin="10,5"/>
                    </Grid>
                </Button>
                <Button HorizontalContentAlignment="Stretch" Click="Unmolk" Margin="10">
                    <Grid>
                        <TextBlock Grid.Column="0" Text="Unmolk" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"/>
                        <Image Grid.Column="1" Source="images/upload.png" Height="34" HorizontalAlignment="Right" Margin="10,5"/>
                    </Grid>
                </Button>

            </StackPanel>
        </Grid>

    </Grid>
</Window>
