<Window Name="mainWindow" x:Class="MolkZip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MolkZip"
        mc:Ignorable="d"
        Title="MÖLK" Height="550" Width="950" MinHeight="550" MinWidth="950"
    xmlns:System="clr-namespace:System;assembly=System.Runtime" Icon="/logo-vit.png" KeyDown="mainWindow_KeyDown">
    <Window.Resources>
        <System:String x:Key="ButtonHelpText1">To remove a file from the list</System:String>
    </Window.Resources>
    <Grid Background="#301241">
        Title="Molk" Height="450" Width="800">
    <Grid Background="#E8E8E8">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Menyraden-->

        <Grid Grid.Row="0" Background="#FF352154">
            <Menu VerticalAlignment="Center" Background="Transparent">
                <MenuItem Header="Help"/>
                <MenuItem Header="?????" />
            </Menu>
            <Image Source="/logo-vit.png" HorizontalAlignment="right" Width="114" Stretch="Fill" RenderOptions.BitmapScalingMode="HighQuality" />
        </Grid>


        <!--Mittenraden-->
        <Grid x:Name="Middlebar" Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Margin="39,15,15,74" BorderBrush="#5f2383" BorderThickness="4" CornerRadius="5">
                <StackPanel x:Name="Files" AllowDrop="True" Background="White" Margin="0,0,0,6">
                    <ListBox x:Name="FilesList" Height="296"     Drop="Files_Drop" AllowDrop="True" Width="510" HorizontalAlignment="Center" KeyDown="FilesList_KeyDown" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="16" Background="#FF2E2045" Foreground="White"/>
                    <StackPanel Height="50" Width="auto">
                        <Label x:Name="labelTip" HorizontalAlignment="Center" Content="Drag and dorp your files here or press Add files!" RenderTransformOrigin="0.529,-0.759" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="2"/>
                    </StackPanel>
                 </StackPanel>

            </Border>

            <StackPanel x:Name="Buttons" Grid.Column="1" VerticalAlignment="Center">
                <Button Content="Molk" Margin="10" Height="68" Width="124"/>
                <Button Content="Unmolk" Margin="10" Height="30"/>
                <Button Name="addFile" Content="  Add  " MouseLeave="addFile_MouseLeave" MouseEnter="addFile_MouseEnter"  Margin="10" HorizontalAlignment="Center" Click="browse" Background="White" BorderBrush="#FF602483" Height="54" Width="82" FontSize="16" Foreground="black">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
               </Button>

                <Button Name="remove" Content="Remove" MouseEnter="remove_MouseEnter" MouseLeave="remove_MouseLeave" Margin="10" HorizontalAlignment="Center" Click="removeFile" Cursor="Hand" AutomationProperties.HelpText="{DynamicResource ButtonHelpText1}" Visibility="Hidden" Height="50" Width="79"  FontSize="16">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>



            </StackPanel>

        </Grid>
        <StackPanel x:Name="A_R_R" Grid.Column="2" VerticalAlignment="Center">

        </StackPanel>


    </Grid>
</Window>
